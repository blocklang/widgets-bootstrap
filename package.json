{
    "name": "widgets-bootstrap",
    "version": "0.0.1-alpha.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/blocklang/widgets-bootstrap.git"
    },
    "scripts": {
        "dev": "dojo build --mode dev --watch file --serve",
        "build": "dojo build --mode dist",
        "build:dev": "dojo build --mode dev",
        "build:widget": "dojo build widget --mode dist --target lib",
        "test": "dojo test",
        "test:unit": "dojo build --mode unit && dojo test --unit --config local",
        "test:functional": "dojo build --mode functional && dojo test --functional --config local",
        "test:all": "dojo build --mode unit && dojo build --mode functional && dojo test --all --config local",
        "precommit": "lint-staged",
        "prettier": "prettier --write 'src/**/*.ts' 'src/**/*.css' 'tests/**/*.ts'"
    },
    "dependencies": {
        "@dojo/framework": "^6.0.3",
        "@dojo/themes": "^6.0.0",
        "@types/jquery": "^3.3.31",
        "bootstrap": "^4.3.1",
        "jquery": "^3.4.1",
        "popper.js": "^1.15.0",
        "tslib": "~1.9.3"
    },
    "devDependencies": {
        "@dojo/cli": "^6.0.0",
        "@dojo/cli-build-widget": "^6.0.1",
        "@dojo/cli-test-intern": "^6.0.0",
        "@types/node": "^9.6.52",
        "husky": "^3.0.8",
        "lint-staged": "^9.4.2",
        "prettier": "^1.18.2",
        "typescript": "~3.4.5"
    },
    "lint-staged": {
        "*.{ts,tsx,css}": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": true,
        "printWidth": 120,
        "arrowParens": "always"
    }
}
